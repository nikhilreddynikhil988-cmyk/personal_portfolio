# .env.example for Backend
# Copy this to .env and fill in the values

# The port the server will run on
PORT=5000

# Your MongoDB connection string
# REMOTE: mongodb+srv://... (for online)
# LOCAL: mongodb://127.0.0.1:27017/portfolio (default if not set)
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database

# The URL of your deployed frontend (e.g., https://your-portfolio.vercel.app)
# (Leave empty or set to localhost:3000 for local development)
FRONTEND_URL=https://your-frontend-url.com
